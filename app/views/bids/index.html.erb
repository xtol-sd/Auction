<h1>Listing bids</h1>

<table>
  <tr>
    <th>User</th>
    <th>Item</th>
    <th>Bid amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bids.each do |bid| %>
  <tr>
    <td><%= bid.user_id %></td>
    <td><%= bid.item_id %></td>
    <td><%= bid.bid_amount %></td>
    <td><%= link_to 'Show', bid %></td>
    <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
    <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

