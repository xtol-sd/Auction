<h1> My Donations </h1>
<% if @donations.blank? %>
  <i><%= "You have not made any donations." %></br>
    <%= "Please go to " %>
    <%= link_to "Donate Item", new_event_item_path(Event.find_by_current(true)) %>
  </i>
  <% else %>
<% @items.each do |item| %>
  <% @donations.each do |donation| %>
     <% if donation.item_id == item.id %>
           <%= item.title %>
          <div class="row">
            <div class="span9"><%= image_tag(item.image_url, :height => 50) %></div>
            <div class="span3">
              <% if !event_over?(item.event) %>
                <% if item.bids.empty? %>
                  <i>Start bid:</i>
                <% else %>
                  <i>Current bid:</i>
                <% end %>
              <% else %>
                <i>Final bid:</i>
              <% end %>  
              <% if !item.bids.nil? %>
                <%= number_to_currency(item.highest_bid(item.start_bid), :unit => "$") %>
              <% else %>
                <%= number_to_currency(item.start_bid, :unit => "$") %>
              <% end %></br>
            </div>
          </div>
          <hr />
        
     <% end %>
    <% end %>
  <% end %>
<% end %>