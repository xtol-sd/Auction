
<h1> My Donations </h1>

<div id="countDownTimer" class="span4 "></div> 
<script> 
  var year = <%= @event.end_datetime.strftime("%Y") %>; 
  var month = <%= @event.end_datetime.strftime("%-m") %>; 
  var day = <%= @event.end_datetime.strftime("%-d") %>; 
  var eventEndDate = new Date(); 
  eventEndDate = new Date(year, month - 1, day); 
  $('#countDownTimer').countdown({until: eventEndDate}); 
</script>
<p class="subtitle"> This auction will end on: <%= @event.end_datetime.strftime("%B %d, %Y") %></p>

<% if @donations.blank? %>
  <i><%= "You have not made any donations." %></br>
    <%= "Please go to " %>
    <%= link_to "Donate Item", new_event_item_path(Event.find_by_current(true)) %>
  </i>
  <% else %>
<% @items.each do |item| %>
  <% @donations.each do |donation| %>
    <% if donation.item_id == item.id %>
      <div class="row">
        <div class="span2"><%= image_tag(item.find_thumb_photo_url) %></div>
        <div class="title-size span6">
          <h4><%= item.title %></h4>
          <p>
            <%= item.description %>
          </p>  
        </div>
        <div class="span1">
        </div>
        <div class="span3">
          <% if !event_over?(item.event) %>
            <% if item.bids.empty? %>
              <i>Start bid:</i>
            <% else %>
              <i>Current bid:</i>
            <% end %>
          <% else %>
            <% if item.bids.empty? %>
              <i>This item was not sold:</i>
            <% else %>
              <i>This item sold for:</i>
            <% end %>
          <% end %>  
          <% if !item.bids.nil? %>
            <%= number_to_currency(item.highest_bid(item.start_bid), :unit => "$") %>
          <% else %>
            <%= number_to_currency(item.start_bid, :unit => "$") %>
          <% end %></br>
        </div>
      </div>
      <hr />        
     <% end %>
    <% end %>
  <% end %>
<% end %>