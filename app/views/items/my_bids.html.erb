<h1> My Bids </h1>
<% @items.each do |item| %>
<% bidcheck = 0 %>
  <% @bids.each do |bid| %>
    <% if bidcheck == 0 %>
      <% if bid.item_id == item.id  %>

      <p> 
      <%= image_tag(item.image_url, :height => 50) %>
      </p>

      <p>
      <b>Item Name:</b>
      <%= item.title %>
      </p>

      <p>
      <b>Description:</b>
      <%= item.description %>
      </p>


      <p>
      <b>Current bid:</b>
        <% if !item.bids.nil? %>
          <%= number_to_currency(item.highest_bid(item.start_bid), :unit => "$") %>
        <% else %>
          <%= number_to_currency(item.start_bid, :unit => "$") %>
        <% end %>
  
      </p>
      <p>
      <b>My bid:</b>
      <%= number_to_currency(item.my_highest_bid(current_user, item.id, item.start_bid), :unit => "$") %>
      <% bidcheck = 1 %>
      </p>
      <% end %>
    <% end %>
  <% end %>
<% end %>

