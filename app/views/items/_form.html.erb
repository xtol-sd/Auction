<%= simple_form_for ([@event, @item]) do |f| %>
  <%= f.error_notification %>

    <%= f.fields_for :user do |builder| %>
      <%= builder.hidden_field :user_id, :value => @user.id %>
    <% end %>
    
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :start_bid %>

    <%= f.button :submit, 'Donate Item' %>
<% end %>
