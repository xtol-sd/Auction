<% if @event && @event.donations_startdate > DateTime.now %>
   Thank you for visiting our site.</br>
   We will begin accepting donations for <%= @event.name %> 
   on <%= @event.donations_startdate.strftime('%b %d, %Y') %>.</br>
   Please visit then to donate.</br>
   <%= @event.name %> will open for bidding on <%= @event.start_datetime.strftime('%b %d, %Y') %>.  
   Thank you.
<% elsif @event && @event.donations_startdate <= DateTime.now && @event.end_datetime >= DateTime.now %>
   <h1> <%= @event.name %></h1>
    <%= render 'shared/count_down_timer' %>
    <% if !event_over?(@event) %> 
      <%= render 'shared/refresh_pages' %>
    <% end %>
    <%= render 'shared/auction_end_info' %>

    <% @items.each do |item| %>
      <% @donations.each do |donation| %>
        <% if donation.item_id == item.id %>
          <% if donation.status == 1 %>
            <div class="row">
              <div class="span2">
                <%= image_tag(item.find_thumb_photo_url) %>
              </div>
              <div class="title-link span7">
                <%= link_to item.title, event_item_path(@event, item) %>
              </div>
              <div class="span3">
              <%= render "/shared/item_bid_information", :item => item %>
              </div>      
            </div>
            <hr/>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% elsif @event && @event.end_datetime < DateTime.now %> 
    <%= @event.name %> ended on <%= @event.end_datetime.strftime('%b %d, %Y') %> 
  <% elsif @event.nil? %>
    Thank you for visiting our site.  No auctions are scheduled at this time.  Please check back again later.
  <% end %> 