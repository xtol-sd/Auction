
<%= link_to("End Auction", edit_event_path(@event), :class => 'btn btn-mini btn-danger offset10') %>

<h1>
  <%= @event.name %>
</h1>  

<div id="countDownTimer" class="span4 "></div> 
<script> 
  var year = <%= @event.end_datetime.strftime("%Y") %>; 
  var month = <%= @event.end_datetime.strftime("%-m") %>; 
  var day = <%= @event.end_datetime.strftime("%-d") %>; 
  var eventEndDate = new Date(); 
  eventEndDate = new Date(year, month - 1, day); 
  $('#countDownTimer').countdown({until: eventEndDate}); 
</script>
<p> This auction will end on: <%= @event.end_datetime.strftime("%B %d, %Y") %></p>

<% @items.each do |item| %>
    <%= link_to item.title, event_item_path(@event, item) %>
    <div class="row">
      <div class="span9"><%= link_to image_tag(item.image_url, :height => 50), event_item_path(@event, item) %></div>
      <div class="span3">
      <% if item.bid_upon?(item) && @event.end_datetime >= DateTime.now %>
        <% bidcheck = 0 %>
        <% item.bids.each do |bid| %>   
          <% if bidcheck == 0 %>       
          <font color="gray"><i>Current Bid:</i></font></br><%= number_to_currency(item.highest_bid(bid.bid_amount), :unit => "$") %>
          <% bidcheck = 1 %>
          <% end %>
        <% end %>
      <% end %>

      <% if item.no_bids?(item) %>
        <% if @event.end_datetime >= DateTime.now %>
          <i><font color="gray">Start Bid:</br><%= number_to_currency(item.start_bid, :unit => "$") %></font></i>
          <% if @event.end_datetime >= DateTime.now && current_user %>
            <%= simple_form_for(@bid) do |f| %>
              <%= f.error_notification %>
              <%= f.hidden_field :user_id, :value => current_user.id %>
              <%= f.hidden_field :item_id, :value => item.id  %>
              <%= f.input :bid_amount, label: false, input_html: { value:  number_with_precision(item.top_bid, :precision => 2) }  %>
              <%= f.button :submit, 'Bid', :confirm => "Bids cannot be retracted. Are you sure?", :class => "btn btn-small btn-primary" %>
            <% end %>
          <% end %>
        <% else %>
          <i><font color="gray">This item was not sold</font></i> 
        <% end %>  
      <% else %>
        <% if @event.end_datetime >= DateTime.now && current_user %>
          <% if item.my_highest_bid(current_user, item.id, item.start_bid) == item.highest_bid(item.start_bid) %>
            <p><span class="label label-success"> Current Top Bidder <i class="icon-thumbs-up"></i> </span></p>
          <% else %>
            <%= simple_form_for(@bid) do |f| %>
              <%= f.error_notification %>
              <%= f.hidden_field :user_id, :value => current_user.id %>
              <%= f.hidden_field :item_id, :value => item.id  %>
              <%= f.input :bid_amount, label: false, input_html: { value:  number_with_precision(item.top_bid + 5, :precision => 2) }  %>
              <%= f.button :submit, 'Bid', :class => "btn btn-small btn-primary", :confirm => "Bids cannot be retracted. Are you sure you want to bid  ?" %>
            <% end %>
          <% end %>
        <% elsif @event.end_datetime <= DateTime.now && current_user %>
          <% if item.my_highest_bid(current_user, item.id, item.start_bid) == item.highest_bid(item.start_bid) %>
            <% bidcheck = 0 %>
            <% item.bids.each do |bid| %>   
              <% if bidcheck == 0 %>       
                <font color="gray"><i>Final Bid:</i></font></br><%= number_to_currency(item.highest_bid(bid.bid_amount), :unit => "$") %>
                <% bidcheck = 1 %>
              <% end %>
            <% end %>
            
            <p><span class="label label-success"> You won! <i class="icon-thumbs-up"></i> </span></p>
            
          <% else %>
            <% bidcheck = 0 %>
            <% item.bids.each do |bid| %>   
              <% if bidcheck == 0 %>       
                <font color="gray"><i>Final Bid:</i></font></br><%= number_to_currency(item.highest_bid(bid.bid_amount), :unit => "$") %>
                <% bidcheck = 1 %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>    
      <% end %>
    </div>
  </div>
    <hr />

<% end %>