
<%= link_to("End Auction", edit_event_path(@event), :class => 'btn btn-mini btn-danger offset10') %>

<h1> <%= @event.name %></h1>  

<div id="countDownTimer" class="span4 "></div> 
<script> 
  var year = <%= @event.end_datetime.strftime("%Y") %>; 
  var month = <%= @event.end_datetime.strftime("%-m") %>; 
  var day = <%= @event.end_datetime.strftime("%-d") %>; 
  var eventEndDate = new Date(); 
  eventEndDate = new Date(year, month - 1, day); 
  $('#countDownTimer').countdown({until: eventEndDate}); 
</script>
<p> This auction will end on: <%= @event.end_datetime.strftime("%B %d, %Y") %></p>

<% @items.each do |item| %>
  <%= link_to item.title, event_item_path(@event, item) %>
  <div class="row">
    <div class="span9"><%= link_to image_tag(item.image_url, :height => 50), event_item_path(@event, item) %></div>
    <div class="span3">
      <div class = "bid_amount"><%= number_to_currency(item.top_bid_amount || item.start_bid, :unit => "$") %></div>
      
      <small> <%= pluralize(item.bids.count, 'Bid') %> </small> 
      <% if @event.finished?%>
        <% if item.bids.empty? %>
           <i><font color="gray">This item was not sold</font></i> 
        <% else %> 
          <font color="gray"><i>Final Bid:</i></font></br><%= number_to_currency(item.top_bid_amount, :unit => "$") %>
          <% if item.top_bid_me?(current_user.id) && current_user %>
            <p><span class="label label-success"> You won! <i class="icon-thumbs-up"></i> </span></p>
          <% end %>              
        <% end %>

      <% elsif current_user %>
        <% if item.top_bid_me?(current_user.id) && current_user %>
          <p><span class="label label-success"> Current Top Bidder <i class="icon-thumbs-up"></i> </span></p>
        <% end %>
        <%= render "/shared/bid_form", :item => item %>
      <% end %>    
    </div>
  </div>
<hr/>
<% end %>