<h1>
  <%= @event.name %>
</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Current Bid</th>
  </tr>

<% @items.each do |item| %>
  <tr>

    <td><%= link_to image_tag(item.image_url, :height => 50), event_item_path(@event, item) %></td>
    <td><%= link_to item.title, event_item_path(@event, item) %></td>
    <% if item.bids %>
      <td><%= number_to_currency(item.highest_bid(item.start_bid), :unit => "$") %></td>
    <% else %>
      <td><%= number_to_currency(item.start_bid, :unit => "$") %></td>
    <% end %>
   
  </tr>
<% end %>
</table>
