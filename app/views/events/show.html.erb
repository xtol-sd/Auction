
<%= link_to("End Auction", edit_event_path(@event), :class => 'btn btn-mini offset10') %>

<h1>
  <%= @event.name %>
</h1>  

<div id="countDownTimer" class="span4 "></div> 
<script> 
  var year = <%= @event.end_datetime.strftime("%Y") %>; 
  var month = <%= @event.end_datetime.strftime("%-m") %>; 
  var day = <%= @event.end_datetime.strftime("%-d") %>; 
  var eventEndDate = new Date(); 
  eventEndDate = new Date(year, month - 1, day); 
  $('#countDownTimer').countdown({until: eventEndDate}); 
</script>
<p> This auction will end on: <%= @event.end_datetime.strftime("%B %d, %Y") %></p>

<% @items.each do |item| %>
    <%= link_to item.title, event_item_path(@event, item) %>
    <div class="row">
      <div class="span9"><%= link_to image_tag(item.image_url, :height => 50), event_item_path(@event, item) %></div>
      <% if item.bid_upon?(item) %>
      <% bidcheck = 0 %>
        <% item.bids.each do |bid| %>   
          <% if bidcheck == 0 %>       
          <font color="gray"><i>Current Bid:</i></font></br><%= number_to_currency(item.highest_bid(bid.bid_amount), :unit => "$") %>
          <% bidcheck = 1 %>
          <% end %>
        <% end %>
      <% end %>
      <% if item.no_bids?(item) %>
        <i><font color="gray">Start Bid:</br><%= number_to_currency(item.start_bid, :unit => "$") %></font></i>
        <% if @event.end_datetime >= DateTime.now && current_user %>
              <%= simple_form_for(@bid) do |f| %>
                <%= f.error_notification %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.hidden_field :item_id, :value => item.id  %>
                <%= f.input :bid_amount, label: false, 
                input_html: { value:  number_with_precision(item.top_bid, :precision => 2) }  %>
                <%= f.button :submit, 'Place Bid', :confirm => "Bids cannot be retracted. Are you sure?" %>
              <% end %>
        <% end %>
      <% else %>
        <% if @event.end_datetime >= DateTime.now && current_user %>
              <%= simple_form_for(@bid) do |f| %>
                <%= f.error_notification %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.hidden_field :item_id, :value => item.id  %>
                <%= f.input :bid_amount, label: false, 
                input_html: { value:  number_with_precision(item.top_bid + 5, :precision => 2) }  %>
                <%= f.button :submit, 'Increase Bid', :class => "btn btn-small btn-primary", :confirm => "Bids cannot be retracted. Are you sure you want to bid  ?" %>
              <% end %>
        <% end %>
      <% end %>
    </div>
    <hr />

<% end %>