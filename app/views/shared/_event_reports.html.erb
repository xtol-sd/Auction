<%if current_user.has_role? :admin %>
 
<h4>STATUS REPORT</h4>
<div class = "textarea">
<table class="table table-hover">
<thead>
	<tr>
		<th colspan="2">Title</th>
		<th colspan="2">Start Bid</th>
		<th colspan="2">Donator Name</th>
		<th colspan="2">Email Address</th>
		<th colspan="2">Status</th>
	</tr>
</thead>
<tbody>
<% Event.new.status_report.each do |report| %>
	<tr>
		<% report.each do |key, value| %>
		<td colspan="2"><%= value %></td>	
		<% end %>
	</tr>
	<% end %>
</tbody>
</table>
</div>
 
<div class = "textarea">
<h4>TOP BID REPORT</h4>
<div class = "textarea">
<table class="table table-hover">
<thead>
	<tr>
		<th colspan="2">Title</th>
		<th colspan="2">Start Bid</th>
		<th colspan="2">Number of Bids</th>
		<th colspan="2">Highest Bid</th>
		<th colspan="2">Highest Bidder</th>
		<th colspan="2">Bidder Email</th>
	</tr>
</thead>
<tbody>
<% Event.new.top_bid_report.each do |report| %>
	<tr>
		<% report.each do |key, value| %>
		<td colspan="2"><%= value %></td>	
		<% end %>
	</tr>
	<% end %>
</tbody>
</table>
</div>

<% end %>