<%= simple_form_for donation do |f| %>
  <%= f.error_notification %>

<%= radio_button("donation", "status", "1") %> Approve</br>
<%= radio_button("donation", "status", "2") %> Reject</br></br>
<%= f.hidden_field :status_created_at, :value => DateTime.now %>
<%= f.input :comment %>
<%= f.button :submit, 'Submit', :class => "btn btn-small btn-primary" %>  
<% end %>