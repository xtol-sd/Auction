
  <script>
   function show(champ){
    $('tbody tr').hide()   
    $('tbody tr:has(p.'+champ+')').show()
   }
  </script>

  <div class = "pull-right">
    <h4>Show Only:</h4>
    <button onclick="show(&quot;pending&quot;)" class="btn btn-mini">Pending</button>
    <button onclick="show(&quot;approved&quot;)" class="btn btn-mini">Approved</button>
    <button onclick="show(&quot;rejected&quot;)" class="btn btn-mini">Rejected</button>
    <!-- <button onclick="$('tbody tr').show()  " class="btn btn-mini">Show all</button> -->
  </div>
  </br>
