<%= simple_form_for @bid, :validate => true do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :item_id, :value => item.id  %>
  <%= f.input :bid_amount, label: false, input_html: { value:  number_with_precision(item.top_bid + 5, :precision => 2) }  %>
  <%= f.button :submit, 'Bid', :class => "btn btn-small btn-primary", :confirm => "Bids cannot be retracted. Are you sure?", :class => "btn btn-small btn-primary" %>
<% end %>