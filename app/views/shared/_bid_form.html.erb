<script type="text/javascript" language="javascript">
  $("#right_col_input").click(function(){
    $("#target").css("background-color","#89cc95");
  });
</script>

<%= simple_form_for @bid do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :item_id, :value => item.id  %>
  <%= f.input :bid_amount, label: false, input_html: { value:  number_with_precision(item.next_allowed_bid, :precision => 0) }, wrapper_html: {class: "form-inline"}, :data => "data-item"  %>
  <%= f.button :submit, 'Bid', :confirm => "Bids cannot be retracted.  Are you sure you want to bid on the #{item.title}?", :class => "btn btn-small btn-primary bid_button inline", :id => 'right_col_input' %>
<% end %>