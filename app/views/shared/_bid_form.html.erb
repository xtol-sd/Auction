<%= simple_form_for @bid do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :item_id, :value => item.id  %>
  <%= f.input :bid_amount, label: false, input_html: { value:  number_with_precision(item.top_bid + 5, :precision => 2) }  %>
  <%= f.button :submit, 'Bid', :confirm => "Are you sure you want to bid on the #{item.title}?", :class => "btn btn-small btn-primary", :id => 'right_col_input' %>
<% end %>